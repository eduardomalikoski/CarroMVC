<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('#exist').modal('show');
        })
</script>
<div class="modal fade" id="exist" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Olá, Clécio&nbsp;&nbsp;</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <h2 class="display-4">Você já populou os Carros Sr. Stark</h2>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Fechar","Index","Carros",null,new { @class = "btn btn-dark"})
            </div>
        </div>
    </div>
</div>